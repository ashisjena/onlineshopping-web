<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order.id %></h1>
                            <ul class="orders__products">
                                <% order.prodDetails.forEach(productDetail => { %>
                                    <li class="orders__products-item"><%= productDetail.product.title %> &emsp;(Qty: <%= productDetail.qty %>)&emsp;â‚¹<%= productDetail.price * productDetail.qty %></li>
                                <% }); %>
                            </ul>
                            <a href="/orders/<%=order.id%>">Invoice</a>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>